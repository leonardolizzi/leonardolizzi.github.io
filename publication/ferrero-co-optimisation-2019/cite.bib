@inproceedings{ferrero_co-optimisation_2019,
 abstract = {Dans cet article, le défi de la conception d’antenne pour un smartphone avec un écran occupant la totalité de la surface du terminal est investigué. Pour répondre à ce défi, une technique d’optimisation multi-domaine est proposée. Un algorithme de type “Particle Swarm Optimizer” (PSO) est utilisé en combinaison avec les logiciels commerciaux HFSS et Optenni avec l’objectif d’optimiser à la fois la géométrie d’antenne et le réseau d’adaptation. L’optimisation indépendante de l’antenne et du circuit d’adaptation, comme réalisé conventionnellement, ne garantit pas un résultat optimal. La méthode proposée est testée dans un espace très contraint de 5×5×73 mm3 pour l’antenne et avec un plan de masse de 140mm*73mm. Dans ce volume, une solution antennaire couvrant les bandes 700-960 MHz et 1690-2700 MHz avec une efficacité totale supérieure à 50% est obtenue.},
 address = {Caen, France},
